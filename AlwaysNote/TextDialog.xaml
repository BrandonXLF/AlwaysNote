<Window
    x:Class="AlwaysNote.TextDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    MinWidth="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
>
    <StackPanel Margin="15,20,15,20">
        <TextBlock Name="Label" Margin="0,0,0,10" />
        <TextBox Name="Input" Padding="3,3,3,3" />
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0" Margin="0,0,5,0" Padding="3" Click="OkButton_Click" />
            <Button Content="Cancel" Grid.Column="1" Margin="5,0,0,0" Padding="3" Click="CancelButton_Click" />
        </Grid>
    </StackPanel>
</Window>
